    <div class="container">   
      <%= form_for @appointment, url: {action: :create} do |f| %>   
          <div>   
            <h3>Add a appointment</h3>   
          </div>   
          <div>   
            <p>   
              <%= "<div>#{@appointment.errors.full_messages.first}</div>".html_safe if @appointment.errors.any? %>   
            <div>   
                <!-- <label>Patient</label>    -->
                  <%= f.hidden_field :patient_id, value: "#{current_patient.id}" %>   
            </div>   
      
            <div>   
                 <label>Select Doctor</label>   
                <%=f.collection_select :doctor_id, Doctor.all, :id,:name%>
            </div>   
      
            <div>   
               <label>Timing</label>   
                  <%= f.text_field :timing %>   
            </div>   
             </p>   
          </div>   
          <div>   
            <%= link_to 'Back', { controller: 'appointments', action: 'index'} %>   
            <%= f.submit 'Create appointments' %>   
          </div>   
      <% end %>   
    </div>  